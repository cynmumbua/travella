<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.AppCompat"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/text_view_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:textStyle="bold"
        android:text="NRB"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintBottom_toTopOf="@+id/text_view_from_stage"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_to"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintVertical_chainStyle="packed"
        style="@style/TextAppearance.AppCompat.Display1"/>
    <TextView
        android:id="@+id/text_view_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oswald"
        android:textStyle="bold"
        android:text="MSA"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="@id/text_view_from"
        app:layout_constraintStart_toEndOf="@id/text_view_from"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        style="@style/TextAppearance.AppCompat.Display1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:fontFamily="@font/oswald"
        app:layout_constraintStart_toEndOf="@id/text_view_from"
        app:layout_constraintEnd_toStartOf="@id/text_view_to"
        app:layout_constraintBaseline_toBaselineOf="@id/text_view_to"
        android:textColor="@color/colorWhite"
        style="@style/TextAppearance.AppCompat.Display2"/>
    <TextView
        android:id="@+id/text_view_from_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kencom Stage"
        android:fontFamily="@font/varela_round"
        app:layout_constraintTop_toBottomOf="@id/text_view_from"
        app:layout_constraintBottom_toTopOf="@+id/view_separator"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="@id/text_view_from"
        app:layout_constraintEnd_toEndOf="@id/text_view_from"
        style="@style/TextAppearance.AppCompat.Small"/>
    <TextView
        android:id="@+id/text_view_to_stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mwatame Road"
        android:fontFamily="@font/varela_round"
        app:layout_constraintTop_toTopOf="@id/text_view_from_stage"
        app:layout_constraintStart_toStartOf="@id/text_view_to"
        app:layout_constraintEnd_toEndOf="@id/text_view_to"
        style="@style/TextAppearance.AppCompat.Small"/>
    <View
        android:id="@+id/view_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorWhite90"
        app:layout_constraintTop_toBottomOf="@id/text_view_from_stage"
        app:layout_constraintBottom_toTopOf="@+id/text_view_bus_co"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/text_view_bus_co"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mash Cool"
        android:fontFamily="@font/oswald"
        android:textColor="@color/colorWhite"
        app:layout_constraintTop_toBottomOf="@id/view_separator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_view_price"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        style="@style/TextAppearance.AppCompat.Body2"/>
    <TextView
        android:id="@+id/text_view_price"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/varela_round"
        android:text="Ksh 1,200"
        app:layout_constraintEnd_toStartOf="@id/text_view_depature"
        app:layout_constraintStart_toEndOf="@id/text_view_bus_co"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_view_bus_co" />
    <TextView
        android:id="@+id/text_view_depature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departs 9:30am"
        android:fontFamily="@font/varela_round"
        app:layout_constraintBaseline_toBaselineOf="@id/text_view_bus_co"
        app:layout_constraintStart_toEndOf="@id/text_view_price"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        style="@style/TextAppearance.AppCompat.Body2"/>
</android.support.constraint.ConstraintLayout>