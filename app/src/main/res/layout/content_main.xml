<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ke.co.travella.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/text_view_headline"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center_horizontal"
        android:text="Catch the next available bus"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/text_view_sub_headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/text_view_sub_headline"
        style="@style/TextAppearance.AppCompat.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/varela_round"
        android:gravity="center_horizontal"
        android:text="Search to get started"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_from"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_headline" />
    <EditText
        android:id="@+id/edit_text_from"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/background_edit_text"
        android:hint="From"
        android:fontFamily="@font/varela_round"
        android:inputType="textCapWords"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_to"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_sub_headline"
        android:layout_marginBottom="8dp"/>
    <EditText
        android:id="@+id/edit_text_to"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@drawable/background_edit_text"
        android:hint="To"
        android:fontFamily="@font/varela_round"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_from"
        app:layout_constraintBottom_toTopOf="@+id/btn_one_way"/>
    <ImageView
        android:id="@+id/image_view_circle_from"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/circle_accent"
        app:layout_constraintEnd_toEndOf="@id/edit_text_from"
        app:layout_constraintTop_toTopOf="@id/edit_text_from"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_from"
        android:layout_marginRight="16dp"/>
    <ImageView
        android:id="@+id/image_view_circle_to"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/circle_accent"
        app:layout_constraintEnd_toEndOf="@id/edit_text_to"
        app:layout_constraintTop_toTopOf="@id/edit_text_to"
        app:layout_constraintBottom_toBottomOf="@id/edit_text_to"
        android:layout_marginRight="16dp"/>
    <View
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="@id/image_view_circle_from"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@id/image_view_circle_to"
        android:layout_marginBottom="2dp"
        app:layout_constraintEnd_toEndOf="@id/edit_text_from"
        android:layout_marginRight="18dp"/>
    <Button
        android:id="@+id/btn_one_way"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:text="One Way"
        android:fontFamily="@font/varela_round"
        app:layout_constraintTop_toBottomOf="@id/edit_text_to"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_depart_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_return"/>
    <Button
        android:id="@+id/btn_return"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="16dp"
        android:text="Return"
        android:fontFamily="@font/varela_round"
        app:layout_constraintTop_toTopOf="@id/btn_one_way"
        app:layout_constraintStart_toEndOf="@id/btn_one_way"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/edit_text_depart_date"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:clickable="true"
        android:cursorVisible="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:hint="Departure"
        android:fontFamily="@font/varela_round"
        android:background="@drawable/background_edit_text"
        android:drawableRight="@drawable/ic_date_range_black_24dp"
        android:drawableEnd="@drawable/ic_date_range_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/btn_one_way"
        app:layout_constraintBottom_toTopOf="@+id/text_view_passengers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_return"
        style="@style/ButtonPurple" />
    <EditText
        android:id="@+id/edit_text_return_date"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:hint="Return"
        android:fontFamily="@font/varela_round"
        android:cursorVisible="false"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:clickable="true"
        android:background="@drawable/background_edit_text"
        android:drawableRight="@drawable/ic_date_range_black_24dp"
        android:drawableEnd="@drawable/ic_date_range_black_24dp"
        app:layout_constraintTop_toTopOf="@id/edit_text_depart_date"
        app:layout_constraintStart_toEndOf="@id/edit_text_depart_date"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/text_view_passengers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:text="Passengers"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/edit_text_depart_date"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_passenger_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_return"
        style="@style/ButtonPurple"/>
    <TextView
        android:id="@+id/text_view_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="16dp"
        android:text="Class"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/text_view_passengers"
        app:layout_constraintStart_toEndOf="@id/text_view_passengers"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/edit_text_passenger_count"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:hint="Passengers"
        android:visibility="gone"
        android:inputType="date"
        android:background="@drawable/background_edit_text"
        app:layout_constraintTop_toBottomOf="@id/text_view_passengers"
        app:layout_constraintBottom_toTopOf="@+id/checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_return"
        style="@style/ButtonPurple" />
    <EditText
        android:id="@+id/edit_text_class"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="16dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:visibility="gone"
        android:hint="Class"
        android:inputType="date"
        android:background="@drawable/background_edit_text"
        app:layout_constraintTop_toTopOf="@id/edit_text_passenger_count"
        app:layout_constraintStart_toEndOf="@id/edit_text_passenger_count"
        app:layout_constraintEnd_toEndOf="parent"/>
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Search Information"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/varela_round"
        app:layout_constraintTop_toBottomOf="@id/edit_text_passenger_count"
        app:layout_constraintBottom_toTopOf="@+id/rl_action_get_buses"
        app:layout_constraintStart_toStartOf="parent"/>
    <RelativeLayout
        android:id="@+id/rl_action_get_buses"
        android:layout_height="48dp"
        android:layout_width="0dp"
        android:elevation="4dp"
        android:background="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/primary_text_dark"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/varela_round"
            android:layout_centerInParent="true"
            android:text="Get Available Buses"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
